<h1>Listing activities</h1>

<table>
  <tr>
    <th>User</th>
    <th>Item</th>
    <th>Money</th>
    <th>Broker</th>
    <th>Property</th>
    <th>Status</th>
  </tr>

<% for activity in @activities %>
  <tr>
    <td><%=h activity.user_id %></td>
    <td><%=h activity.item_id %></td>
    <td><%=h activity.money %></td>
    <td><%=h activity.broker_id %></td>
    <td><%=h activity.property_id %></td>
    <td><%=h activity.status_id %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

