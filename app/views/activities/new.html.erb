<h1>New activity</h1>

<%= error_messages_for :activity %>

<% form_for(@activity) do |f| %>
  <p>
     <%= f.hidden_field :user_id %>
  </p>

  <p>
     <%= f.hidden_field :item_id %>
  </p>

  <p>
    <b>Money</b><br />
    <%= f.text_field :money %>
  </p>


  <p>
    <b>Description</b><br />
    <%= f.text_area :description,:rows=>"10" %>
  </p>


   <p>
    <b>直接付款</b><%= f.radio_button :broker_id,"nil" %>
    <% for broker in @item.brokers %>
     <b>通过<%= broker.user.login %></b> <%= f.radio_button :broker_id,"#{broker.id}" %>
    <% end %>

   </p>

  <p>
    <%= f.hidden_field :broker_id %>
  </p>

  <p>
     <%= f.hidden_field :property_id %>
  </p>

  <p>
     <%= f.hidden_field :status_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', activities_path %>
